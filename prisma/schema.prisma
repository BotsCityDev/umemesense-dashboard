// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- AUTH.JS REQUIRED MODELS (Do not change) ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// --- CORE APPLICATION MODELS ---

model User {
  id             String    @id @default(cuid())
  name           String?   // Name of owner
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  
  // Custom: Connects to their devices
  devices        Device[]
  
  // Auth.js Relations
  accounts       Account[]
  sessions       Session[]
  
  // If you use password login, you'd add:
  passwordHash String? // <--- UNCOMMENT THIS LINE
}

model Device {
  id             String            @id @default(cuid()) // Meter ID (e.g., Hardware ID)
  name           String            @default("New Meter")
  
  // Owner Info
  location_lat   Float             @default(0)
  location_lon   Float             @default(0)
  technology     String            @default("Solar") // e.g., Solar, Wind, Grid
  system_size_kw Float             @default(0)

  // Relations
  user_id        String
  user           User              @relation(fields: [user_id], references: [id])
  
  readings       EnergyReading[]

  @@index([user_id])
}

// Time-Series Energy Data Table
model EnergyReading {
  // Composite Primary Key for efficient time-series lookup
  timestamp        DateTime @default(now()) @db.Timestamptz(3)
  device_id        String
  device           Device   @relation(fields: [device_id], references: [id])

  // Energy Data
  active_power_p   Float
  reactive_power_q Float
  apparent_power_s Float
  voltage          Float
  current          Float
  power_factor     Float
  energy_kwh       Float // Cumulative Energy
  recs             Float // Renewable Energy Credits

  @@id([device_id, timestamp])
  @@index([timestamp]) // Optimize for time-based queries
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}